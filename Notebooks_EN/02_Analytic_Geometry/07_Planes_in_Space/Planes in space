        "\n",
        "i = (3)(2) - (4)(4) = 6 - 16 = -10\n",
        "\n",
        "j = (2)(2) - (4)(3) = 4 - 12 = -8\n",
        "\n",
        "k = (2)(4) - (3)(3) = 8 - 9 = -1\n",
        "\n",
