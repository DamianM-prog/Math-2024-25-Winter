        "d = \\begin{vmatrix}\n",
        "\\hat{i} & \\hat{j} & \\hat{k} \\\\\n",
        "2 & 3 & 4 \\\\\n",
        "3 & 4 & 2\n",
        "\\end{vmatrix}\n",
